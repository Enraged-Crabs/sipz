<div class="sipz-post">
  <div class="sipz-image">
   <%= image_tag @post.picture.url, class: 'img-fluid' %>
 </div>
  <div class="sipz-caption">
    <br /><br />
    <div class="beer-name">
      <%= @post.caption %>
    </div>
    <br /><br />
    <div class="user-date">
      posted by <%= @post.user.username %> on <%= @post.created_at.strftime("%b %d, %Y" + " at " + "%H:%M") %>
    </div>
    <div class="addcomment enter float-right">Add Comment</div>
  </div>
</div>
