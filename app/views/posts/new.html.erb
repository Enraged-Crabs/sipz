<%= simple_form_for Post.new, url: beer_posts_path(@beer, @post) do |f| %>
  <div class="sipz-addpost">    
    <div class="sipz-caption">
      add post caption<br /><br />
      <%= f.input :caption, label: false, placeholder: '3-100 character caption', as: :text, :input_html => { :rows => 2 } %>
      <div class="float-bottom">
        <%= f.submit 'Add Post', class: 'enter' %>
      </div>
    </div>
    <div class="sipz-image">
      add a photo or video<br /><br />
      <%= f.file_field :picture, type: "file", class: "fileinput" %>
      <label for="file" class="fileoutput" style="cursor: pointer;">click to choose file or drag and drop</label>  
    </div>
  </div>
<% end %>