<div class="sipz-welcome-login">
  <p>
    Share</br>
    - beers</br>
    - breweries</br>
    Rate and Follow</br>
    - beers</br>
    - breweries</br>
    - users
  </p>
</div>
<div class="sipz-form-login">
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.input :email, required: true, label: false, placeholder: 'email' %>
    <%= f.input :password, required: true, label: false, placeholder: 'password' %>
    <%= f.input :password_confirmation, required: true, label: false, placeholder: 'password' %>
    <div class="sipz-log-links float-left">
      <a class="forgot">Forgot Password?</a>
    </div>
    <%= f.button :submit, 'Sign Up', class: 'sipz-enter float-right' %>
  <% end %>
</div>
