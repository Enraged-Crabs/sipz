<div class="sipz-post">
  <div class="sipz-caption">
    <br /><br />
    <div class="sipz-title">
      <%= @beer.name %>
    </div> 
    <div class="float-bottom">
      <div class="user-date">
        added by <%= @beer.user.username %> on <%= @beer.created_at.strftime("%b %d, %Y" + " at " + "%H:%M") %>
      </div>
      <br />
      <div class="addpost enter float-left">New Post</div>
      <div class="sipz-text float-right">add a post realted to this beer</div>      
    </div>
  </div>
  <div class="sipz-image" style="background: url(<%= @beer.picture.url %>) center; background-size: cover;">     
  </div>
</div>
<div id="AddPost">
  <%= render template: "posts/new" %>
</div>
<% @beer.posts.each do |post| %>
  <%= link_to beer_post_path(@beer, post) do %>
    <div class="sipz-list">
      <div class="sipz-caption">
        <br />
        <div class="sipz-title">
          <%= post.caption %>
        </div>
        <br /><br />
        <div class="float-bottom user-date">
          posted by <%= post.user.username %> on <%= post.created_at.strftime("%b %d, %Y" + " at " + "%H:%M") %>
        </div>
      </div>
      <div class="sipz-image" style="background: url(<%= post.picture.url %>) center; background-size: cover;">   
      </div>
    </div>
  <% end %>
<% end %>
<script>
  $( ".addpost" ).click(function() {
    $( "#AddPost" ).toggle();
  });
</script>