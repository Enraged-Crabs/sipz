<%= link_to "NEW", "/list", class: "post-list-link" %>

<% @beers.each do |beer| %>
  <%= link_to beer_path(beer) do %>
    <div class="post-preview" style="background: url(/assets/pic-<%= beer.id %>.png) center; background-size: cover;">
      <div class="post-caption">
        <%= beer.name %>
      </div>
    </div>
  <% end %>
<% end %>

