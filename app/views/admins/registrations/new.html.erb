<div class="welcome-login">
  <p>
    Share</br>
    - beers</br>
    - breweries</br>
    Rate and Follow</br>
    - beers</br>
    - breweries</br>
    - users
  </p>
</div>
<div class="form-login">
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.input :username, required: true, label: false, placeholder: 'username', input_html: { autocomplete: "username" } %>
    <%= f.input :email, required: true, label: false, placeholder: 'email', input_html: { autocomplete: "email" } %>
    <%= f.input :password, required: true, label: false, placeholder: 'password', input_html: { autocomplete: "password" } %>
    <%= f.input :password_confirmation, required: true, label: false, placeholder: 'password', input_html: { autocomplete: "password" } %>
    <div class="log-links float-left">
      <a class="forgot">Forgot Password?</a>
    </div>
    <%= f.button :submit, 'Sign Up', class: 'enter float-right' %>
  <% end %>
</div>
