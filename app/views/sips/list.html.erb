<% @sips.each do |sip| %>
  <%= link_to sip_path(sip) do %>
    <div class="post-list">
      <div class="post-image" style="background: url(/assets/pic-<%= sip.id %>.png) center;  background-size: cover;"></div>
      <div class="post-caption">
        <i class="fa fa-user-circle"></i>
        <%= sip.user.email %></br></br>
        <%= sip.message %></br></br>
        <%= sip.created_at %>
      </div>
    </div>
  <% end %>
<% end %>